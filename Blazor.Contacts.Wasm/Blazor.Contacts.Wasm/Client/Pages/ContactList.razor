@page "/"

@inject IContactService ContactService
@inject NavigationManager NavigationManager


<h3>Contacts</h3>

@Message

<table>
    <tbody>
        <tr>
            <td colspan="2"><a href="/contactdetails" class="btn btn-primary mb-2">Add New</a></td>
        </tr>
    </tbody>

</table>

@if (contacts == null)
{
    <p><em>Loading....</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Address</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in contacts)
            {
                <tr>
                    <td>@contact.FullName</td>
                    <td>@contact.Phone</td>
                    <td>@contact.Address</td>
                    <td><a href="/contactdetails/@contact.Id" class="btn btn-warning mb-1">Edit</a></td>
                    <td><a href="/contactdelete/@contact.Id" class="btn btn-danger mb-1">Delete</a></td>

                </tr>
            }
        </tbody>

    </table>
}


@code {
    IEnumerable<Contact> contacts;
    public string Message { get; set; }

    protected async override Task OnInitializedAsync()
    {
        try
        {
            contacts = await ContactService.GetAll();
        }
        catch (Exception e)
        {
            
            Message = "Error..." + e.InnerException.StackTrace;
        }
    }

}
